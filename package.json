{
  "devDependencies": {
    "lint-staged": "13.3.0",
    "prettier": "2.8.8",
    "prettier-plugin-java": "1.6.2",
    "simple-git-hooks": "2.11.1"
  },
  "lint-staged": {
    "**/*.{json,yml,yaml,java}": [
